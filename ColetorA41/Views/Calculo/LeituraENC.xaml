<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColetorA41.Views.Calculo.LeituraENC"
             xmlns:models="clr-namespace:ColetorA41.Models"
             xmlns:viewmodels="clr-namespace:ColetorA41.ViewModel"
             xmlns:local="clr-namespace:ColetorA41.Converters"
             x:Name="leituraEnc"
             HideSoftInputOnTapped="True"
             Shell.NavBarIsVisible="False"
             Title="Etiqueta ENC">

    <ContentPage.Resources>
        <local:StringToColor x:Key="StringToColor" />

        <Style x:Key="lblCabec" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontAttributes" Value="None" />
            <Setter Property="TextColor" Value="{StaticResource Primary}" />
        </Style>

        <Style x:Key="lblDet" TargetType="Label">
            <Setter Property="FontSize" Value="Small" />
            <Setter Property="FontAttributes" Value="Bold" />

        </Style>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="200,*,60">
        <StackLayout>
            <Grid RowDefinitions="100,200">
                <Rectangle Fill="{StaticResource MenuCabec}"  Stroke="{StaticResource MenuCabec}"/>
                <Ellipse Grid.Row="1" Fill="{StaticResource MenuCabec}" TranslationY="-110">
                    <Ellipse.Shadow>
                        <Shadow Brush="Black"
 Offset="1,1"
 Radius="5"
 Opacity="0.8" />
                    </Ellipse.Shadow>
                </Ellipse>
               
            </Grid>

            <VerticalStackLayout Padding="20,10" Margin="0,-300,0,0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Margin="0,0,0,20" >
                    <Image
                        Source="scanner.png"
                        HeightRequest="60"
                        HorizontalOptions="Center">
                        <Image.Shadow>
                            <Shadow Brush="Black"
    Offset="10,10"
    Radius="40"
    Opacity="0.8" />
                        </Image.Shadow>
                    </Image>
                    <Label  Text="Leitura ENC"
                            TextColor="White"
                        FontAttributes="Bold"
                        FontSize="22"
                        VerticalOptions="Center"  
                        HorizontalOptions="Center" />

                </HorizontalStackLayout>
               
                <Border HeightRequest="70" Margin="10,0" Padding="0" StrokeShape="RoundRectangle 100" BackgroundColor="WhiteSmoke"  >
                    <Entry x:Name="entry"
                       Margin="20,10"
                       FontSize="18"
                       Text="{Binding NumEnc}"
                       Placeholder="Aguardando leitura de etiqueta...."
                       PlaceholderColor="Red"
                       ReturnCommand="{Binding LeituraENCCommand}"
                       ReturnCommandParameter="{Binding NumEnc}"
                       TextColor="Black"></Entry>
                </Border>

               

            </VerticalStackLayout>
            
        </StackLayout>

        <ScrollView Grid.Row="1"  Margin="10,-10,10,0" HorizontalOptions="Center">
            <StackLayout>
                
                <CollectionView x:Name="collectionParam"
                 ItemsSource="{Binding listaEnc}" 
                 SelectionMode="None" 
                 VerticalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Enc">
                            <StackLayout>
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem 
                                                    IconImageSource="trash.png"
                                                    BackgroundColor="WhiteSmoke"
                                                    Command="{Binding BindingContext.EliminarEncCommand, Source={x:Reference leituraEnc}}"
                                                    CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <Border HeightRequest="90" StrokeShape="RoundRectangle 10" BackgroundColor="WhiteSmoke" HorizontalOptions="Center" Margin="0,0,0,10">
                                        <Grid ColumnDefinitions="*,auto" >
                                            <Frame Grid.Column="1" HeightRequest="30" WidthRequest="120" Margin="2,2" Padding="5" HasShadow="true" VerticalOptions="Start"  
                                                   BackgroundColor="{Binding flag, Converter={StaticResource  StringToColor}}" CornerRadius="10">
                                                <Label Text="{Binding flag}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
                                            </Frame>
                                            <Grid Padding="5" RowDefinitions="35,auto,*" ColumnDefinitions="auto,auto,auto,auto,auto" ColumnSpacing="20" Grid.Column="0">
                                                <!--Chave-->
                                                <Label Text="{Binding itCodigo}" Grid.ColumnSpan="4" FontSize="16" FontAttributes="Bold" />
                                                <!--Cabecalho-->
                                                <Label Text="ENC"      Style="{StaticResource lblCabec}" Grid.Row="1" Grid.Column="0"></Label>
                                                <Label Text="OS"       Style="{StaticResource lblCabec}" Grid.Row="1" Grid.Column="1"></Label>
                                                <Label Text="Chamado"  Style="{StaticResource lblCabec}" Grid.Row="1" Grid.Column="2"></Label>
                                                <Label Text="Nota SaÃ­da"       Style="{StaticResource lblCabec}" Grid.Row="1" Grid.Column="3"></Label>
                                                <Label Text="Nat Oper"  Style="{StaticResource lblCabec}" Grid.Row="1" Grid.Column="4"></Label>
                                                <!--Detalhe-->
                                                <Label Text="{Binding numEnc}" Style="{StaticResource lblDet}" Grid.Row="2" Grid.Column="0"></Label>
                                                <Label Text="{Binding numOS}"   Style="{StaticResource lblDet}" Grid.Row="2" Grid.Column="1"></Label>
                                                <Label Text="{Binding chamado}"        Style="{StaticResource lblDet}" Grid.Row="2" Grid.Column="2"></Label>
                                                <Label Text="{Binding notaSaida}"   Style="{StaticResource lblDet}" Grid.Row="2" Grid.Column="3"></Label>
                                                <Label Text="{Binding natOper}"        Style="{StaticResource lblDet}" Grid.Row="2" Grid.Column="4"></Label>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </SwipeView>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

        </ScrollView>

        <Grid ColumnDefinitions="*,*,*" Grid.Row="2" BackgroundColor="White">
            <VerticalStackLayout  Grid.Column="0" HorizontalOptions="Center">
                <Image Source="seta_esquerda" WidthRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarExtrakitCommand}" />
                    </Image.GestureRecognizers>
                </Image>

            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <ActivityIndicator
                 Grid.Column="0"
                 IsVisible="{Binding IsBusy}"
                 HorizontalOptions="Center"
                 IsRunning="{Binding IsBusy}"
                 VerticalOptions="Center"
                />
            </VerticalStackLayout>



            <VerticalStackLayout  Grid.Column="2" HorizontalOptions="Center">
                <Image Source="seta_direita" WidthRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarLoginAlmoxaCommand}" />
                    </Image.GestureRecognizers>
                </Image>


            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>