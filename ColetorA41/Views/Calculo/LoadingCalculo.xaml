<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColetorA41.Views.Calculo.LoadingCalculo"
             Title="LoadingCalculo">
    <Grid RowDefinitions="200,*,60">
        <StackLayout>
            <Grid RowDefinitions="100, 200">
                <Rectangle 
                        VerticalOptions="Start"
                        HeightRequest="100"
                        Fill="#D7F0FE"
                        />
                <Ellipse 
                    Grid.Row="1"
                    x:Name="HeaderShape02"
                       Fill="#D7F0FE"
                       TranslationY="-110"
                       HeightRequest="200"
                       VerticalOptions="Start"
/>
            </Grid>

            <VerticalStackLayout VerticalOptions="Center" Margin="0,-290,0,0">
                <Image
            Source="calculo.png"
            SemanticProperties.Description="Cute dot net bot waving hi to you!"
            HeightRequest="80"
            HorizontalOptions="Center" Margin="0,0,0,10"/>

                <Label 
            Text="CÃ¡lculo Necessidades"
            VerticalOptions="Center" 
            FontAttributes="Bold"
            FontSize="22"
            HorizontalOptions="Center" Margin="0,0,0,0"
            />

               
            </VerticalStackLayout>
        </StackLayout>

        <VerticalStackLayout Grid.Row="1" Padding="20" HorizontalOptions="Center" VerticalOptions="Center">

            <ActivityIndicator
                         Grid.Column="0"
                         IsVisible="{Binding IsBusy}"
                         HorizontalOptions="Center"
                         IsRunning="{Binding IsBusy}"
                         VerticalOptions="Center"
                        />
            <Label Text="Aguarde...."></Label>

        </VerticalStackLayout>

        <Grid Grid.Row="2">
            <Rectangle 
                    VerticalOptions="Start"
                    HeightRequest="100"
                    Fill="#D7F0FE"
                    />
        </Grid>
    </Grid>
</ContentPage>