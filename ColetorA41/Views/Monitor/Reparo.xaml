<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColetorA41.Views.Monitor.Reparo"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
  Shell.NavBarIsVisible="False"
             Title="Reparo">
    <Grid RowDefinitions="200,*,60,8">
        <StackLayout>
            <Grid RowDefinitions="100,200">
                <Rectangle Fill="{StaticResource dnBlue}"  Stroke="{StaticResource dnBlue}"/>
                <Ellipse Grid.Row="1" Fill="{StaticResource dnBlue}" TranslationY="-110">
                    <Ellipse.Shadow>
                        <Shadow Brush="Black"
                         Offset="1,1"
                         Radius="5"
                         Opacity="0.8" />
                    </Ellipse.Shadow>
                </Ellipse>
            </Grid>

            <VerticalStackLayout VerticalOptions="Center" Margin="0,-280,0,0">
                <Image
            Source="reparo.png"
            HeightRequest="80"
            HorizontalOptions="Center" Margin="0,0,0,10">
                    <Image.Shadow>
                        <Shadow Brush="Black"
                            Offset="10,10"
                            Radius="40"
                            Opacity="0.8" />
                    </Image.Shadow>
                </Image>

                <Label 
                    Text="Abertura de Reparos"
                    TextColor="{StaticResource White}"
                    FontAttributes="Bold"
                    FontSize="22"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" Margin="0,0,0,0"/>
            </VerticalStackLayout>
        </StackLayout>

        <VerticalStackLayout Grid.Row="1" Padding="20" Margin="0,80" Spacing="10">
           

        </VerticalStackLayout>


        <Grid Grid.Row="2" ColumnDefinitions="*,*,*" >
            <VerticalStackLayout  Grid.Column="0" HorizontalOptions="Center">
                <Image Source="seta_esquerda" WidthRequest="50">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource dnBlue}" />
                    </Image.Behaviors>
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarProcessoCommand}" />
                    </Image.GestureRecognizers>


                </Image>

            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <ActivityIndicator
         Grid.Column="0"
         IsVisible="{Binding IsBusy}"
         HorizontalOptions="Center"
         IsRunning="{Binding IsBusy}"
         VerticalOptions="Center"
        />
            </VerticalStackLayout>

        </Grid>
        <Grid Grid.Row="3" VerticalOptions="End" HorizontalOptions="FillAndExpand" Margin="-1,-1">
            <Rectangle>
                <Rectangle.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="{StaticResource dnBlue}" Offset="0.1" />
                        <GradientStop Color="{StaticResource dnPurple}"  Offset="0.5" />
                        <GradientStop Color="{StaticResource dnRed}"  Offset="1.0" />
                    </LinearGradientBrush>
                </Rectangle.Background>
            </Rectangle>

        </Grid>


    </Grid>
</ContentPage>