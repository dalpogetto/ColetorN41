<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColetorA41.Views.Calculo.ZoomTransporte"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             >
    <Grid RowDefinitions="200,*,60" WidthRequest="320" VerticalOptions="Center" HorizontalOptions="Center">
        <Frame HasShadow="True" CornerRadius="10">
            <Label Text="Zoom Transportadora" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
        </Frame>
        <HorizontalStackLayout Grid.Row="2">
            <Button Text="Cancelar"    Command="{Binding ZoomTransporteCancelarCommand}"></Button>
            <Button Text="Selecionar"  Command="{Binding ZoomTransporteSelecionarCommand}"></Button>
        </HorizontalStackLayout>
    </Grid>
</toolkit:Popup>