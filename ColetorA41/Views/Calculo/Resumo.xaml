<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColetorA41.Views.Calculo.Resumo"
             xmlns:viewmodel="clr-namespace:ColetorA41.ViewModel"
             xmlns:models="clr-namespace:ColetorA41.Models"
             x:DataType="viewmodel:CalculoViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Cálculo de Necessidades"
              Shell.NavBarIsVisible="False"
             HideSoftInputOnTapped="True">
  
        <Grid RowDefinitions="50,*,60">

            <Grid RowDefinitions="70, 200">
            <Rectangle Fill="{StaticResource MenuCabec}"  Stroke="{StaticResource MenuCabec}"/>
            <Ellipse Grid.Row="1" Fill="{StaticResource MenuCabec}" TranslationY="-110">
                <Ellipse.Shadow>
                    <Shadow Brush="Black"
 Offset="1,1"
 Radius="5"
 Opacity="0.8" />
                </Ellipse.Shadow>
            </Ellipse>
        </Grid>
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10" Margin="0,20,0,0">
            <Image
                    Source="resumo2.png"
                    HeightRequest="50"
                    HorizontalOptions="Center">
                <Image.Shadow>
                    <Shadow Brush="Black"
                    Offset="10,10"
                    Radius="40"
                    Opacity="0.8" />
                </Image.Shadow>
            </Image>
            <Label Text="Resumo do Cálculo"
                   TextColor="White"
                    FontAttributes="Bold"
                    FontSize="22"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />

            </HorizontalStackLayout>
        
            <VerticalStackLayout VerticalOptions="Center" Spacing="10" Margin="0,20,0,0" Grid.Row="1" HorizontalOptions="Center">
            <Button Text="Impressão Informe" WidthRequest="150" BackgroundColor="{StaticResource Gray900}" Command="{Binding GerarInformeCommand}" CornerRadius="20"></Button>

            <HorizontalStackLayout HorizontalOptions="Center">
               

            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="0,10,10,10" Padding="10" Spacing="5" RadioButtonGroup.GroupName="TipoCalculo" RadioButtonGroup.SelectedValue="{Binding TipoCalculo}" HorizontalOptions="Center">
                <RadioButton Content="Renov.Total" Value="1">
                    <RadioButton.Behaviors>
                        <toolkit:EventToCommandBehavior
                                 EventName="CheckedChanged"
                                 Command="{Binding RadioTipoCalculoCommand}"
                                 CommandParameter="1"/>
                    </RadioButton.Behaviors>
                    <RadioButton.Triggers>
                        <Trigger TargetType="RadioButton" Property="IsChecked" Value="True">
                            <Setter Property="FontSize" Value="22" />
                            <Setter Property="FontAttributes" Value="Bold" />
                        </Trigger>
                        <Trigger TargetType="RadioButton" Property="IsChecked" Value="False">
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="FontAttributes" Value="None" />
                        </Trigger>
                    </RadioButton.Triggers>
                </RadioButton>
                <RadioButton Content="Renov.Parcial" Value="2" IsChecked="True" FontSize="20">
                    <RadioButton.Behaviors>
                        <toolkit:EventToCommandBehavior
                                  EventName="CheckedChanged"
                                  Command="{Binding RadioTipoCalculoCommand}"
                                  CommandParameter="2"/>  
                    </RadioButton.Behaviors>
                    <RadioButton.Triggers>
                        <Trigger TargetType="RadioButton" Property="IsChecked" Value="True">
                            <Setter Property="FontSize" Value="22" />
                            <Setter Property="FontAttributes" Value="Bold" />
                        </Trigger>
                        <Trigger TargetType="RadioButton" Property="IsChecked" Value="False">
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="FontAttributes" Value="None" />
                        </Trigger>
                    </RadioButton.Triggers>
                </RadioButton>
                <RadioButton Content="Dev.Extrakit" Value="3" >
                    <RadioButton.Behaviors>
                        <toolkit:EventToCommandBehavior
                                  EventName="CheckedChanged"
                                  Command="{Binding RadioTipoCalculoCommand}"
                                  CommandParameter="3"/>
                    </RadioButton.Behaviors>
                    <RadioButton.Triggers>
                        <Trigger TargetType="RadioButton" Property="IsChecked" Value="True">
                            <Setter Property="FontSize" Value="22" />
                            <Setter Property="FontAttributes" Value="Bold" />
                        </Trigger>
                        <Trigger TargetType="RadioButton" Property="IsChecked" Value="False">
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="FontAttributes" Value="None" />
                        </Trigger>
                    </RadioButton.Triggers>
                </RadioButton>
            </HorizontalStackLayout>

            
           
                


            <HorizontalStackLayout HorizontalOptions="Center">
                <Frame CornerRadius="10" HasShadow="True"  Margin="10,0" WidthRequest="170" HeightRequest="120" Padding="0" BackgroundColor="WhiteSmoke">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChamarResumoDetalheCommand}" CommandParameter="Geral" />
                        </Frame.GestureRecognizers>
                        <Grid RowDefinitions="*,*,auto" ColumnDefinitions="*">
                            <Frame CornerRadius="10" HasShadow="True" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="80" HeightRequest="40" BackgroundColor="Black" Padding="1" >
                                <Label Text="{Binding Fichas.Geral}" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </Frame>
                        <Label Text="{Binding Fichas.GeralExtrakit, StringFormat='{0} ETs fora do processo'} " Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="VISÃO GERAL" Grid.Row="2" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,5"/>
                        </Grid>
                    </Frame>

                <Frame CornerRadius="10" HasShadow="True"  Margin="10,0" WidthRequest="170" HeightRequest="120" Padding="0" BackgroundColor="WhiteSmoke">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarResumoDetalheCommand}" CommandParameter="Renovar" />
                    </Frame.GestureRecognizers>
                    <Grid RowDefinitions="*,*,auto" ColumnDefinitions="*">
                            <Frame CornerRadius="10" HasShadow="True" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="80" HeightRequest="40" BackgroundColor="Green" Padding="1" >
                            
                            <Label Text="{Binding Fichas.Renovacao}" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </Frame>
                            <Label Text="Entradas e Saídas" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="RENOVAÇÕES" Grid.Row="2" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,5" TextColor="Green"/>
                        </Grid>
                    </Frame>
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="Center" >
                <Frame CornerRadius="10" HasShadow="True"  Margin="10,0" WidthRequest="170" HeightRequest="120" Padding="0" BackgroundColor="WhiteSmoke">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarResumoDetalhePagtoCommand}" CommandParameter="Pagto" />
                    </Frame.GestureRecognizers>
                    <Grid RowDefinitions="*,*,auto" ColumnDefinitions="*">
                            <Frame CornerRadius="10" HasShadow="True" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="80" HeightRequest="40" BackgroundColor="#045B8F" Padding="1" >
                            <Label Text="{Binding Fichas.Pagto}" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </Frame>
                            <Label Text="Saídas" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="PAGAMENTO" Grid.Row="2" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,5" TextColor="#045B8F"/>
                        </Grid>
                    </Frame>

                <Frame CornerRadius="10" HasShadow="True"  Margin="10,0" WidthRequest="170" HeightRequest="120" Padding="0" BackgroundColor="WhiteSmoke" >
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarResumoDetalheCommand}" CommandParameter="ET" />
                    </Frame.GestureRecognizers>
                    <Grid RowDefinitions="*,*,auto" ColumnDefinitions="*">
                            <Frame CornerRadius="10" HasShadow="True" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="80" HeightRequest="40" BackgroundColor="Orange" Padding="1" >
                            <Label Text="{Binding Fichas.Extrakit}" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </Frame>
                            <Label Text="Kits convertidos em ETs" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Margin="5,0,2,0"/>
                            <Label Text="EXTRAKIT" Grid.Row="2" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,5" TextColor="Orange"/>
                        </Grid>
                    </Frame>
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="Center" >
                    <Frame CornerRadius="10" HasShadow="True"  Margin="10,0" WidthRequest="170" HeightRequest="120" Padding="0" BackgroundColor="WhiteSmoke">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarResumoDetalheCommand}" CommandParameter="SoEntrada" />
                    </Frame.GestureRecognizers>
                    <Grid RowDefinitions="*,*,auto" ColumnDefinitions="*">
                            <Frame CornerRadius="10" HasShadow="True" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="80" HeightRequest="40" BackgroundColor="#AAC248" Padding="1" >
                            <Label Text="{Binding Fichas.SomenteEntrada}" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </Frame>
                            <Label Text="Notas de Entrada + ET + Qtde Ruins" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Margin="5,0,2,0"/>
                            <Label Text="SOMENTE ENTRADA" Grid.Row="2" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,5" TextColor="#AAC248"/>
                        </Grid>
                    </Frame>

                <Frame CornerRadius="10" HasShadow="True"  Margin="10,0" WidthRequest="170" HeightRequest="120" Padding="0" BackgroundColor="WhiteSmoke">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChamarResumoDetalheCommand}" CommandParameter="SemSaldo" />
                    </Frame.GestureRecognizers>
                    <Grid RowDefinitions="*,*,auto" ColumnDefinitions="*">
                            <Frame CornerRadius="10" HasShadow="True" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="80" HeightRequest="40" BackgroundColor="#9e3933" Padding="1" >
                            <Label Text="{Binding Fichas.SemSaldo}" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </Frame>
                            <Label Text="Itens e Alternativos sem saldo" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Margin="5,0,2,0"/>
                            <Label Text="SEM SALDO" Grid.Row="2" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,5" TextColor="#9e3933"/>
                        </Grid>
                    </Frame>
                </HorizontalStackLayout>

                <StackLayout Padding="20" Spacing="10" WidthRequest="320">
                    <Button Text="{Binding LblAprovar, StringFormat='Aprovar - {0}'} " CornerRadius="20"></Button>
                    <Button Text="{Binding LblAprovarSemEntrada, StringFormat='Aprovar Sem Saída - {0}'} " CornerRadius="20"></Button>
                </StackLayout>
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*,*" Grid.Row="2" BackgroundColor="White">
                
                    <VerticalStackLayout  Grid.Column="0" HorizontalOptions="Center">
                        <Image Source="seta_esquerda" WidthRequest="50">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}" />
                    </Image.Behaviors>
                    <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChamarLeituraENCCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <ActivityIndicator
                         Grid.Column="0"
                         IsVisible="{Binding IsBusy}"
                         HorizontalOptions="Center"
                         IsRunning="{Binding IsBusy}"
                         VerticalOptions="Center"
                        />
                    </VerticalStackLayout>

            <VerticalStackLayout  Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
               
                        <Image Source="seta_dupla_esquerda" WidthRequest="80" Margin="0,-18,0,0">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}" />
                    </Image.Behaviors>
                    <Image.GestureRecognizers>
                                 <TapGestureRecognizer Command="{Binding ChamarEstabTecCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    

            </VerticalStackLayout>
           
        </Grid>
        </Grid>
    
</ContentPage>