<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColetorA41.Views.Calculo.LoadingCalculo"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             Title="LoadingCalculo">
    <Grid RowDefinitions="200,*,auto">
        <StackLayout>
            <Grid RowDefinitions="100, 200">
                <Rectangle 
                        VerticalOptions="Start"
                        HeightRequest="100"
                        Fill="#D7F0FE"
                        />
                <Ellipse 
                    Grid.Row="1"
                    x:Name="HeaderShape02"
                       Fill="#D7F0FE"
                       TranslationY="-110"
                       HeightRequest="200"
                       VerticalOptions="Start">
                    <Ellipse.Shadow>
                        <Shadow Brush="LightGray"
 Offset="1,1"
 Radius="5"
 Opacity="0.8" />
                    </Ellipse.Shadow>
                </Ellipse>
               

            </Grid>

            <VerticalStackLayout VerticalOptions="Center" Margin="0,-290,0,0">
                <Image
            Source="calculo.png"
            SemanticProperties.Description="Cute dot net bot waving hi to you!"
            HeightRequest="80"
            HorizontalOptions="Center" Margin="0,0,0,10"/>

                <Label 
            Text="Cálculo Necessidades"
            VerticalOptions="Center" 
            FontAttributes="Bold"
            FontSize="22"
            HorizontalOptions="Center" Margin="0,0,0,0"
            />

               
            </VerticalStackLayout>
        </StackLayout>

        <VerticalStackLayout Grid.Row="1" Padding="20" HorizontalOptions="Center" VerticalOptions="Center">

            <ActivityIndicator
                         
                         IsVisible="{Binding IsBusy}"
                         HorizontalOptions="Center"
                         IsRunning="{Binding IsBusy}"
                         VerticalOptions="Center"
                        />
            <Label Text="Gerando Resumo Aguarde ...." FontAttributes="Bold"></Label>

        </VerticalStackLayout>

        

        <Grid Grid.Row="2" ColumnDefinitions="*,*" HorizontalOptions="Center" BackgroundColor="#D7F0FE" Padding="20">
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="Estabelecimento: " HorizontalTextAlignment="End"  FontSize="16"></Label>
                <Label Text="Técnico: " HorizontalTextAlignment="End"  FontSize="16"></Label>
                <Label Text="Processo: " HorizontalTextAlignment="End"  FontSize="16"></Label>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                <Label Text="{Binding EstabSelecionado.identific}" FontSize="16" FontAttributes="Bold" ></Label>
                <Label Text="{Binding TecnicoSelecionado.identific}" FontSize="16" FontAttributes="Bold"></Label>
                <Label Text="{Binding NrProcessSelecionado}" FontSize="16" FontAttributes="Bold"></Label>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>